<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdjnshq.circle.ui.page.friend.FriendAddActivity">
    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:centerType="textView"
        app:centerText="朋友验证"
        app:centerTextColor="@color/font_normal"
        app:layout_collapseMode="pin"
        app:statusBarColor="@color/transparent"
        app:leftType="textView"
        app:leftText="取消"
        app:leftTextSize="15sp"
        app:leftTextColor="@color/font_normal"
        app:rightCustomView="@layout/lay_friend_button"
        app:rightType="customView"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="您需要发送验证申请，等对方通过"
        android:textSize="14sp"
        android:textColor="@color/color_666"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white"
        android:hint="请输入验证信息"
        android:inputType="text"
        android:maxEms="4"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:textColor="@color/font_normal"
        android:textColorHint="@color/font_hint"
        android:textCursorDrawable="@null"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tv_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>