<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <View
        android:id="@+id/v_bg"
        android:layout_width="327dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_share_radius10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_share_dialog1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@mipmap/ic_share_dialog2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_content"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_white_radius10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_close"
        app:layout_constraintTop_toTopOf="@id/v_bg"
        app:layout_constraintRight_toRightOf="@id/v_bg"/>


    <ImageView
        android:id="@+id/iv_invite1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_share_big"
        app:layout_constraintLeft_toLeftOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/v_content"
        app:layout_constraintRight_toRightOf="@id/v_content"/>

    <View
        android:id="@+id/v_content2"
        android:layout_width="300dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_white_radius10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_content" />
    
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="@id/v_content2"
        app:layout_constraintBottom_toBottomOf="@id/v_content2"
        app:layout_constraintLeft_toLeftOf="@id/v_content2"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/font_normal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/v_content2"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/font_normal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_code"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="20dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/FFFF4731"
        app:layout_constraintRight_toRightOf="@id/v_content2"
        app:layout_constraintTop_toTopOf="@id/v_content2"
        app:layout_constraintBottom_toBottomOf="@id/v_content2"
        />



    <View
        android:id="@+id/v_content3"
        android:layout_width="327dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_botttom_white_radius10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v_bg" />

    <ImageView
        android:id="@+id/iv_share_w"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="42dp"
        android:src="@mipmap/ic_share_dialog_w"
        app:layout_constraintTop_toTopOf="@id/v_content3"
        app:layout_constraintLeft_toLeftOf="@id/v_content3"
        />
    <TextView
        android:id="@+id/tv_share_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享给微信好友"
        android:textSize="11sp"
        android:textColor="@color/font_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_share_w"
        app:layout_constraintLeft_toLeftOf="@id/iv_share_w"
        app:layout_constraintRight_toRightOf="@id/iv_share_w"
        />

    <ImageView
        android:id="@+id/iv_share_c"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_share_dialog_c"
        app:layout_constraintTop_toTopOf="@id/v_content3"
        app:layout_constraintRight_toRightOf="@id/v_content3"
        app:layout_constraintLeft_toLeftOf="@id/v_content3"
        />
    <TextView
        android:id="@+id/tv_share_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享到朋友圈"
        android:textSize="11sp"
        android:textColor="@color/font_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_share_c"
        app:layout_constraintLeft_toLeftOf="@id/iv_share_c"
        app:layout_constraintRight_toRightOf="@id/iv_share_c"
        />


    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="42dp"
        android:src="@mipmap/ic_share_save"
        app:layout_constraintTop_toTopOf="@id/v_content3"
        app:layout_constraintRight_toRightOf="@id/v_content3"
        />
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存到相册"
        android:textSize="11sp"
        android:textColor="@color/font_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_save"
        app:layout_constraintLeft_toLeftOf="@id/iv_save"
        app:layout_constraintRight_toRightOf="@id/iv_save"
        />
</androidx.constraintlayout.widget.ConstraintLayout>