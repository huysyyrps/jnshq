<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        app:centerText="选择性别"
        app:centerType="textView"
        app:leftType="customView"
        app:leftCustomView="@layout/lay_title_left_back"
        app:rightCustomView="@layout/lay_title_right_yes"
        app:rightType="customView"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_male"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_male_radius10"
            android:foreground="@drawable/bg_pri_radius10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_male" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="男"
                android:textColor="@color/font_normal"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_female"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:layout_marginLeft="60dp"
            android:foreground="@drawable/bg_pri_radius10"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_female" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="女"
                android:textColor="@color/font_normal"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>